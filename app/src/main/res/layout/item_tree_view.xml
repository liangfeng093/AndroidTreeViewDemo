    <!--三角形-->

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_arrow" />


        <TextView
            android:id="@+id/tvNameTreeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivArrow"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="姓名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvChildCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvNameTreeView" />


        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/location_icon" />


        <ImageView
            android:id="@+id/ivTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivLocation"
            android:padding="15dp"
            android:src="@mipmap/track_icon" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlContainer"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#dbdbdb" />


</RelativeLayout>